/* Custom Style for Brand Name in the Nav Bar */
#brandStyle {
	background-color: #4aaaa5; 
	font-weight: bold; 
	color:#ffffff;
	font-family:'Georgia', Times, Times New Roman, serif;
	font-size: x-large;
}

/* Profile picture adjust to left in About Me*/
#profile {
	float: left;
	padding: 10px;
}

/* Size the icons in the "Connect with Me" Panel*/
.panel-images {
	height:45px;
	width: 45px;
	margin:10px;
}

.connectWithMe {
	text-align: center;
	color:#4aaaa5;
	font-family: 'Georgia', Times, Times New Roman, serif;
	font-weight: bold;
	font-size: large;
}

/* Portfolio Images */

/* Set size for Portfolio Images */
.relative {
	position: relative;
}

.portfolio-images {
	height:200px;
	width: 300px;
	margin:25px;
}

/* Text on Portfolio Images */
.portfolio-text {
	width:300px;
	height:40px;
	background-color: teal;
	color:#ffffff;
	margin:0 0 0 50px;
	text-align: center;
	position:absolute;
	bottom:0;
	padding: 10px 20px;
}


/* Set proper styling for the footer text and the box*/
.footer {
	text-align: center;
	color:black;
	padding:20px;
	font-size:10px;
}

.footer-box {
	background-color: gray;
	width:100%;
}